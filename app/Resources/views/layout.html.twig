<!DOCTYPE html>
<html>
	<head>
		<title>{% block title %}PhiTrac{% endblock %}</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		{% block stylesheets %}
			<link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" type="text/css" />
			<link href="{{ asset('css/bootstrap-theme.css') }}" rel="stylesheet" type="text/css" />
			<link href="{{ asset('css/design.css') }}" rel="stylesheet" type="text/css" />
		{% endblock %}
		<meta charset="utf-8" />
		<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
		<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
		<!--[if lt IE 9]>
			<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
			<script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
		<![endif]-->
	</head>
	<body>
		<div class="container-fluid">
			<div class="row">
				 <div class="col-sm-2" id="userbox">
			        {% include "PhiTracUserBundle::userbox.html.twig" %}
		        </div>
				<div class="col-sm-10">
					{% block project %}
					{% endblock %}
				</div>	
			</div>

			<div class="row">		
				{{ render(controller("PhiTracProjectBundle:Project:menu", {"currentUrl": app.request.pathInfo})) }}
				
				<div class="col-md-10">
				    <div class="row">
				        <div class="col-xs-12">
				            <ul class="breadcrumb">
				                {% block guideline %}
				                    <li><a href="{{ path('home_project') }}">BugTracker</a></li>
				                {% endblock %}
			                </ul>
				        </div>
				    </div>
					{% block body %}
					{% endblock %}	
				</div>
			</div>
		</div>
		{% block javascripts %}
		{% endblock %}
	</body>
</html>


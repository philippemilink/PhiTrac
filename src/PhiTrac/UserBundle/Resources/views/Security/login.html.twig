<!DOCTYPE html>
<html>
	<head>
		<title>PhiTrac</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		{% stylesheets filter='cssrewrite'
		    'css/bootstrap.css'
		    'css/bootstrap-theme.css'
		    '@PhiTracUserBundle/Resources/public/css/connexion.css' %}
		    <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
	    {% endstylesheets %}
		<meta charset="utf-8" />
		<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
		<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
		<!--[if lt IE 9]>
			<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
			<script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
		<![endif]-->
	</head>
	<body>
		<div class="container">
			<div class="row">						
				<div class="col-md-12">
				    <h1>PhiTrac</h1>
				    
				    <div class="well">				    
				        <h2>Login</h2>
				        {% for key, message in app.session.flashbag.all() %}
                            <div class="alert alert-{{ key }}">
                                {{ message|trans({}, 'FOSUserBundle') }}
                            </div>
                        {% endfor %}


                        {% if error %}
                            <div class="alert alert-danger">{{ error.message }}</div>
                        {% endif %}
                        
                        <form action="{{ path('login_check') }}" method="post" class="form-horizontal">

                            <div class="row">
                                <label for="username" class="col-xs-4 col-sm-3 col-md-2">Username: </label>
                                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="col-xs-8 col-sm-5 col-md-3" />
                            </div>

                            <div class="row">
                                <label for="password" class="col-xs-4 col-sm-3 col-md-2">Password: </label>
                                <input type="password" id="password" name="_password" required="required" class="col-xs-8 col-sm-5 col-md-3" />
                            </div>

                            <div class="row">
                                <label for="remember_me" class="col-xs-4 col-sm-3 col-md-2">Remember me:</label>
                                <input type="checkbox" id="remember_me" name="_remember_me" value="on" class="col-xs-8 col-sm-5 col-md-3" />
                            </div>

                            <input type="submit" id="_submit" name="_submit" value="Login" class="btn btn-info" />
                        </form>
                    </div>
                </div>
			</div>
		</div>
	</body>
</html>
